# Production environment variables example
# Copy this file to .env.production (or populate your EB environment directly)

# Server
NODE_ENV=production
PORT=5000

# SMTP (required for booking emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Website <no-reply@example.com>"
BOOKING_TO=

# Admin credentials
ADMIN_USER=admin
ADMIN_PASS=PleaseChangeMe!2026
PASSCODE=replace_with_passcode

# Storage: set to 's3' for production durable uploads
STORAGE_BACKEND=s3
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_URL=https://<your-bucket>.s3.<region>.amazonaws.com

# Optional extras
COOKIE_SECURE=true
SESSION_TTL_MS=86400000

