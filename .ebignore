# Exclude backup files from Elastic Beanstalk bundles
*.bak
**/*.bak
server/server.js.bak

# Exclude local environment files
.env
.env.*

# Editor/temp files
*~
*.swp
.vscode/
.idea/
# Exclude common heavy or local files
node_modules/
.elasticbeanstalk/
eb-tmp/
*.log
.DS_Store
.git
.gitignore

# Ensure .platform hooks are included in the EB source bundle
!.platform/
!.platform/**

# Allow key app files through (adjust if your layout differs)
!package.json
!package-lock.json
!public/
!pages/
!src/
!next.config.js
